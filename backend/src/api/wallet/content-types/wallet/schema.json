{
  "kind": "collectionType",
  "collectionName": "wallets",
  "info": {
    "singularName": "wallet",
    "pluralName": "wallets",
    "displayName": "Wallet"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "VND"
    },
    "initial_balance": {
      "type": "integer",
      "default": 0
    },
    "transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "wallet"
    }
  }
}